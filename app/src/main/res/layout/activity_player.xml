            <LinearLayout
                android:id="@+id/control_holder"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_below="@id/player_seekbar"
                android:background="@color/control_background_dark"
                android:elevation="2dp"
                android:orientation="horizontal"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:background="@drawable/unbounded_ripple"
                        android:padding="5dp"
                        android:src="@drawable/ic_repeat_white_48dp" />

                    <ImageView
                        android:id="@+id/player_rewind"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:background="@drawable/unbounded_ripple"
                        android:drawSelectorOnTop="true"
                        android:padding="5dp"
                        android:src="@drawable/ic_skip_previous_white_48dp" />

                    <ImageView
                        android:id="@+id/player_play"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:background="@drawable/unbounded_ripple"
                        android:drawSelectorOnTop="true"
                        android:padding="5dp"
                        android:src="@drawable/ic_play_arrow_white_48dp" />

                    <ImageView
                        android:id="@+id/player_forward"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:background="@drawable/unbounded_ripple"
                        android:drawSelectorOnTop="true"
                        android:padding="5dp"
                        android:src="@drawable/ic_skip_next_white_48dp" />

                    <ImageView
                        android:id="@+id/player_shuffle"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:background="@drawable/unbounded_ripple"
                        android:drawSelectorOnTop="true"
                        android:padding="5dp"
                        android:src="@drawable/ic_shuffle_white_48dp" />
                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/patch"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_alignBottom="@+id/player_playlist"
                android:layout_alignTop="@+id/control_holder"
                android:background="#303030"></RelativeLayout>

            <LinearLayout
                android:id="@+id/player_playlist"
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:layout_below="@+id/control_holder"
                android:layout_margin="5dp"
                android:background="@color/control_background_dark"
                android:orientation="vertical" />
        </RelativeLayout>

    </com.manuelpeinado.fadingactionbar.view.ObservableScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="?attr/colorPrimary"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
</android.support.design.widget.CoordinatorLayout>
